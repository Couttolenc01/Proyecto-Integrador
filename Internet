#ifndef InternetOperator_H
#define InternetOperator_H

#include "operator.h"

class InternetOperator : public Operator {
private:
  const double LIMITGB = 10.0;

public:
  InternetOperator(int, double, double, double, int, OperatorType);
  InternetOperator(const InternetOperator&);

  double calculateTalkingCost(int, int) const;
  double calculateMessageCost(int, int, int) const;
  double calculateNetworkCost(double) const;
};
InternetOperator(int inter, double calcuTalkCost, double calcuMesCost, double calcuNetCost, int interOper, InternetOperator type){
int = inter;
calculateTalkingCost = calcuTalkCost;
calculateMessageCost = calcuMesCost;
calculateNetworkCost = calcuNetCost;
InternetOperator = type;
type = typ;
}
double InternetOperator::getcalculateTalking()const{
  return calcuTalkCost;
}
double InternetOperator::getcalculateMessage()cost{
  return calcuMesCost;
}
double InterOperator::getcalculateNetwork()cost{
  return calcuNetCost;
}
int InterOperator::getinterOperator()cost{
  return interOper;
}
InternetType::getInternetOperator()cost{
  return typ;
}
#endif
